[Unit]
Description={{description}}
After=network.target nss-lookup.target

[Service]
EnvironmentFile=/etc/sysconfig/{{name}}.service
ExecStart=/usr/bin/npm start
WorkingDirectory=/usr/lib/{{name}}
Restart=always
User={{username}}
Group={{username}}
{{#serviceOptions}}
{{key}}={{value}}
{{/serviceOptions}}

[Install]
WantedBy=multi-user.target
