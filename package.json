{
  "name": "speculate",
  "version": "1.7.1",
  "description": "Automatically generates an RPM Spec file for your Node.js project",
  "main": "index.js",
  "scripts": {
    "test": "mocha",
    "lint": "eslint .",
    "posttest": "npm run lint",
    "coverage": "istanbul cover _mocha -- -R dot"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bbc/speculate.git"
  },
  "keywords": [
    "spec",
    "rpm",
    "file",
    "node",
    "generate"
  ],
  "author": "ibl-team@lists.forge.bbc.co.uk",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bbc/speculate/issues"
  },
  "homepage": "https://github.com/bbc/speculate#readme",
  "bin": {
    "speculate": "./bin/speculate.js"
  },
  "dependencies": {
    "commander": "^2.9.0",
    "hogan.js": "^3.0.2",
    "lodash": "^4.6.1",
    "rimraf": "^2.5.2",
    "tar-fs": "^1.11.1"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "node": true,
      "mocha": true
    },
    "rules": {
      "semi": 2,
      "no-console": 0
    }
  },
  "devDependencies": {
    "codeclimate-test-reporter": "^0.5.0",
    "eslint": "^4.1.0",
    "istanbul": "^0.4.2",
    "mocha": "^3.4.2",
    "sinon": "^2.3.5"
  }
}
